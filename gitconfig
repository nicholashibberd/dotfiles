[core]
	excludesfile = ~/.gitignore_global
  editor = vim
[push]
	default = current
[user]
	name = nicholashibberd
	email = nicholashibberd@gmail.com
[color]
	ui = true
[alias]
	br = branch
	ci = commit
	cia = commit --amend -C HEAD
	co = checkout
	cob = checkout -b
	cm = checkout master
  cp = cherry-pick
	d = diff
  dm = "!git branch --merged | grep -v '^* master$' | grep -v '^  master$' | xargs git branch -d"
	ds = diff --staged
  p = pull
	st = status
  su = "!f() { git branch --set-upstream $1 origin/$1; }; f"
